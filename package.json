{
  "name": "mockoon-com",
  "version": "1.0.0",
  "description": "Mockoon app website repository",
  "main": "index.js",
  "scripts": {
    "release": "git checkout -b release/next && node ./scripts/new-release.js && git add . && git commit -m \"Prepare new release\"",
    "imagesize": "node ./scripts/markdown-image-size.js",
    "dev": "cross-env NODE_OPTIONS='--inspect' next",
    "build": "next build",
    "postbuild": "node ./scripts/generate-sitemap.js && cp -R ./content/releases/desktop/ ./public/desktop-changelogs-markdown",
    "export": "npm run build && next export",
    "start": "next start",
    "deploy": "npm run export && firebase deploy --token \"$FIREBASE_TOKEN\" --only hosting"
  },
  "author": {
    "name": "Guillaume Monnet",
    "email": "hi@255kb.dev",
    "url": "https://255kb.dev/"
  },
  "homepage": "https://mockoon.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mockoon/mockoon.com.git"
  },
  "bugs": {
    "url": "https://github.com/mockoon/mockoon.com/issues"
  },
  "license": "MIT",
  "prettier": {
    "jsxSingleQuote": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "dependencies": {
    "bootstrap": "^5.2.0",
    "glob": "^8.0.3",
    "gray-matter": "^4.0.3",
    "next": "^12.2.2",
    "next-transpile-modules": "^9.0.0",
    "raw-loader": "^4.0.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.4.0",
    "react-dom": "^18.2.0",
    "react-github-btn": "^1.3.0",
    "react-hook-form": "^7.33.1",
    "react-markdown": "^8.0.3",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-raw": "^6.1.1",
    "remark-gfm": "^3.0.1",
    "sass": "^1.39.0",
    "semver": "^7.3.7",
    "typed.js": "^2.0.12"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "@types/react-syntax-highlighter": "^15.5.3",
    "@types/semver": "^7.3.10",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.17.0",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "firebase-tools": "^11.28.0",
    "image-size": "^1.0.2",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
