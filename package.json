{
  "name": "mockoon-com",
  "version": "1.18.0",
  "description": "Mockoon app website repository",
  "main": "index.js",
  "scripts": {
    "release": "git checkout -b release/next && npm version minor --git-tag-version=false && cross-var cp -r ./content/docs/latest/ ./content/docs/v$npm_package_version && git add . && git commit -m \"Prepare new release\"",
    "dev": "cross-env NODE_OPTIONS='--inspect' next",
    "build": "next build",
    "export": "npm run build && next export",
    "start": "next start",
    "deploy": "npm run export && firebase deploy --token \"$FIREBASE_TOKEN\" --only hosting"
  },
  "author": {
    "name": "Guillaume Monnet",
    "email": "hi@255kb.dev",
    "url": "https://255kb.dev/"
  },
  "homepage": "https://mockoon.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mockoon/mockoon.com.git"
  },
  "bugs": {
    "url": "https://github.com/mockoon/mockoon.com/issues"
  },
  "license": "MIT",
  "prettier": {
    "jsxSingleQuote": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "dependencies": {
    "bootstrap": "^5.1.0",
    "gray-matter": "^4.0.3",
    "next": "^11.1.2",
    "next-transpile-modules": "^8.0.0",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-github-btn": "^1.2.1",
    "react-hook-form": "^7.23.0",
    "react-markdown": "^7.0.1",
    "react-syntax-highlighter": "^15.4.4",
    "react-typed": "^1.2.0",
    "rehype-raw": "^6.1.0",
    "remark-gfm": "^2.0.0",
    "sass": "^1.39.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/semver": "^7.3.8",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.2",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "firebase-tools": "^9.17.0",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2"
  }
